package com.example.jianlongguo.abs.Entities;

import android.os.Parcel;
import android.os.Parcelable;

import java.util.Date;

/**
 * Created by jianlongguo on 11/4/15.
 */
public class Patient implements Parcelable{

    LoginInfo login;
    Details detail;

    @Override
    public int describeContents() {
        return 0;
    }

    @Override
    public void writeToParcel(Parcel dest, int flags) {
        dest.writeValue(login);
        dest.writeValue(detail);
    }

    // this is used to regenerate your object. All Parcelables must have a CREATOR that implements these two methods
    public static final Parcelable.Creator<Patient> CREATOR = new Parcelable.Creator<Patient>() {
        public Patient createFromParcel(Parcel in) {
            return new Patient(in);
        }

        public Patient[] newArray(int size) {
            return new Patient[size];
        }
    };

    private Patient(Parcel in){
    }
    //User fields

    class LoginInfo implements Parcelable{
        //login info fields
        String nric, password;

        private String getNric() {
            return this.nric;
        }

        private String getPassword() {
            return this.password;
        }

        public void setNric(String nric){
            this.nric = nric;
        }

        public void setPassword(String password){
            this.password = password;
        }

        private LoginInfo(String nric, String password) {
            this.nric = nric;
            this.password = password;
        }

        private LoginInfo(){};

        @Override
        public int describeContents() {
            return 0;
        }

        @Override
        public void writeToParcel(Parcel dest, int flags) {
            dest.writeString(nric);
            dest.writeString(password);
        }

        // this is used to regenerate your object. All Parcelables must have a CREATOR that implements these two methods
        public final Parcelable.Creator<LoginInfo> CREATOR = new Parcelable.Creator<LoginInfo>() {
            public LoginInfo createFromParcel(Parcel in) {
                return new LoginInfo(in);
            }

            public LoginInfo[] newArray(int size) {
                return new LoginInfo[size];
            }
        };
        private LoginInfo(Parcel in){
        }
    }

    class Details {
        //user details
        String name, email, address, gender, mode;
        Date dob;
        int contact;

        private String getName() {
            return this.name;
        }

        private String getEmail() {
            return this.email;
        }

        private String getAddress() {
            return this.address;
        }

        private String getGender() {
            return this.gender;
        }

        private String getMode() {
            return this.mode;
        }

        private Date getDob(){
            return this.dob;
        }

        private int getContact() {
            return this.contact;
        }

        private Details(String name, String email, String address, String gender, String mode, Date dob, int contact){
            this.name = name;
            this.email = email;
            this.address = address;
            this.gender = gender;
            this.mode = mode;
            this.dob = dob;
            this.contact = contact;
        }

    }
}